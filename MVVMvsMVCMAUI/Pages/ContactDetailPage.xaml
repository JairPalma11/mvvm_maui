<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMvsMVCMAUI.Pages.ContactDetailPage"
             Padding="20"
             xmlns:behaviors="clr-namespace:MVVMvsMVCMAUI.Behaviors"
             Title="Detalle de contacto">
    <ContentPage.Resources>

        <behaviors:EmailValidatorBehavior x:Key="EmailValidatorBehavior" />
        

    </ContentPage.Resources>
    <VerticalStackLayout
        Spacing="10">
        <Entry
            Keyboard="Plain"
            Text="{Binding FirstName}"
            Placeholder="Nombre" />
        <Entry
            Keyboard="Plain"
            Text="{Binding LastName}"
            Placeholder="Apellidos" />
        <Entry
            Keyboard="Email"
            Text="{Binding Email}"
            Placeholder="Correo electronico">

            <Entry.Behaviors>

                <behaviors:EmailValidatorBehavior />

            </Entry.Behaviors>

        </Entry>
        <Entry
            Keyboard="Telephone"
            Text="{Binding Phone}"
            Placeholder="Telefono"/>

        <Button
            Margin="0, 20"
            Command="{Binding SaveCommand}"
            Text="Guardar" />
    </VerticalStackLayout>
</ContentPage>
