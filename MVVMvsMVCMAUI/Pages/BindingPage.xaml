<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMvsMVCMAUI.Pages.BindingPage"
             Padding="20"
             Title="BindingPage">
    <!-- Ejemplos de bindings View to View -->
    <VerticalStackLayout
        Spacing="10">
        <Label Text="Este es tu numero:" />
        <Label Text="{Binding Source={x:Reference slider}, Path=Value}" />
        <Slider
            Minimum="1"
            Maximum="100"
            x:Name="slider" />
        <Entry
            Text="{Binding Source={x:Reference slider}, Path=Value, Mode=TwoWay}"
            x:Name="entry"
            Placeholder="Ingresa un numero del 1-100" />
    </VerticalStackLayout>
</ContentPage>
